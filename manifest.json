{
    "name": "Media Controller",
    "version": "2.0.0",
    "manifest_version": 3,
    "description": "Control the volume, pan, and speed of any media on a site.",

    "permissions":[
      "declarativeContent",
      "tabs"
    ],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "./ContentScript/content.js"
        ]
      }
    ],

    "action": {
      "default_title": "Media Controller",
      "default_popup": "./Popup/popup.html"
    }
  }
