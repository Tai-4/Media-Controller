{
    "name": "Audio Controller",
    "version": "2.0.0",
    "manifest_version": 3,
    "description": "Control the volume, pan, and speed of any audio on a site. This also applies to audio in video.",
    
    "permissions":[
      "declarativeContent",
      "tabs"
    ],
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "./ContentScript/content.js"
        ]
      }
    ],

    "action": {
      "default_title": "Video Controller",
      "default_popup": "./Popup/popup.html"
    }
  }
  